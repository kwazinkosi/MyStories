
<h6> MY DASHBOARD</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{body}}</td>
                    <td>{{created_at}}</td>
                    <td>{{updated_at}}</td>
                    <td>
                        <a href="/stories/edit/{{_id}}" class="btn-floating btn-small waves-effect waves-light blue"><i class="fas fa-edit"></i></a>
                        <a href="/stories/delete/{{_id}}" class="btn-floating btn-small waves-effect waves-light red"><i class="fas fa-trash-alt"></i></a>
                    </td>

                </tr>
            {{/each}}  
        </tbody>
{{else}}
    <p>You have no stories</p>
{{/if}}

